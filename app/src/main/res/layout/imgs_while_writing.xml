<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/img_while_writing"
        android:fitsSystemWindows="true"/>

    <Button
        android:id="@+id/img_delete_bt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_alignEnd="@id/img_while_writing"
        android:background="@drawable/cancel"/>

    <ImageView
        android:id="@+id/firstIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/img_while_writing"
        android:layout_alignStart="@id/img_while_writing"
        android:visibility="gone"
        app:srcCompat="@drawable/favourite" />

</RelativeLayout>