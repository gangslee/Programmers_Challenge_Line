<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteActivity">

    <include layout="@layout/write_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/addImageBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="20dp"
        android:text="@string/addImageBt" />

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="120dp"-->
<!--        android:layout_below="@+id/addImageBt"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginBottom="10dp"-->
<!--        android:layout_marginStart="20dp"-->
<!--        android:layout_marginEnd="20dp"-->
<!--        android:id="@+id/imageList">-->

        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@+id/addImageBt"
            android:id="@+id/imageList"
            app:srcCompat="@mipmap/ic_launcher"/>
<!--    </androidx.recyclerview.widget.RecyclerView>-->
<!--        android:background="@color/cardview_dark_background" -->


    <EditText
        android:id="@+id/writeTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageList"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/writeTitleText"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/writeDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/writeTitleText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:hint="@string/writeDetailText"
        android:paddingStart="5dp"
        android:textSize="20dp" />
</RelativeLayout>